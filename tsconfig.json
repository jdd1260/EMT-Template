{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.js", "jest-mongodb.config.js", "node_modules/**/*"]
}
